{
  "manifest_version": 3,
  "name": "DefineMe",
  "version": "1.0.0",
  "description": "Double-click any word to get definitions or translations",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.dictionaryapi.dev/*",
    "https://libretranslate.de/*",
    "https://api.mymemory.translated.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "DefineMe Settings"
  }
}